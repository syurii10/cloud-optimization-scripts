# Cloud Optimization Project - Environment Variables
# Скопіюйте цей файл в .env і заповніть своїми значеннями

# ===========================
# AWS Configuration
# ===========================
AWS_REGION=eu-central-1
AWS_PROFILE=default
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here

# ===========================
# Instance Configuration
# ===========================
# Типи EC2 інстансів для порівняння (через кому)
INSTANCE_TYPES=t3.micro,t3.small,t3.medium

# Тип target сервера
TARGET_SERVER_TYPE=t3.small

# Кількість клієнтських серверів
CLIENT_SERVER_COUNT=1

# ===========================
# Testing Configuration
# ===========================
# Кількість запитів на секунду (RPS)
RPS_DEFAULT=100

# Тривалість тесту (секунди)
TEST_DURATION=60

# Інтервал збору метрик (секунди)
METRICS_INTERVAL=5

# Тривалість збору метрик (секунди)
METRICS_DURATION=90

# ===========================
# Security
# ===========================
# ВАЖЛИВО: Вкажіть вашу IP адресу для SSH доступу!
# Формат: xxx.xxx.xxx.xxx/32
ALLOWED_SSH_CIDR=0.0.0.0/0

# ===========================
# GitHub Configuration
# ===========================
GITHUB_REPO=https://github.com/syurii10/cloud-optimization-scripts.git

# ===========================
# TOPSIS Weights
# ===========================
# Ваги критеріїв (сума має дорівнювати 1.0)
WEIGHT_PERFORMANCE=0.35
WEIGHT_RESPONSE_TIME=0.25
WEIGHT_CPU_USAGE=0.15
WEIGHT_MEMORY_USAGE=0.15
WEIGHT_COST=0.10

# ===========================
# Logging
# ===========================
LOG_LEVEL=INFO
LOG_FILE=optimization.log

# ===========================
# Server Configuration
# ===========================
# Порт веб-дашборду
DASHBOARD_PORT=8080

# ===========================
# Terraform Configuration
# ===========================
# Назва проекту (використовується в тегах AWS)
PROJECT_NAME=cloud-optimization

# ===========================
# Output Configuration
# ===========================
# Директорія для збереження результатів
RESULTS_DIR=./results

# Формат дати для файлів результатів
DATE_FORMAT=%Y-%m-%d_%H-%M-%S
